<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.ddit.prod.dao.OthersDAO">
	<select id="selectLprodList" resultType="LprodVO">
		SELECT
		    LPROD_ID
		    ,LPROD_GU
		    ,LPROD_NM
		FROM
		    LPROD
	</select>
	<select id="selectBuyerList" parameterType="String" resultType="BuyerVO">
		SELECT
		    BUYER_ID
		    , BUYER_NAME
		    , BUYER_LGU
		    , BUYER_BANK
		    , BUYER_BANKNO
		    , BUYER_BANKNAME
		    , BUYER_ZIP
		    , BUYER_ADD1
		    , BUYER_ADD2
		    , BUYER_COMTEL
		    , BUYER_FAX
		    , BUYER_MAIL
		    , BUYER_CHARGER
		    , BUYER_TELEXT
		FROM
		    BUYER
		    <if test="@org.apache.commons.lang3.StringUtils@isNotBlank(lprodGu)">
		    	WHERE BUYER_LGU = #{lprodGu}
		    </if>
	</select>
	
</mapper>