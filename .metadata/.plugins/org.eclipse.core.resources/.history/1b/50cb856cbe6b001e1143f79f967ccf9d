package kr.or.ddit.file;

import java.io.File;
import java.io.IOException;
import java.io.InputStream;

import javax.annotation.PostConstruct;
import javax.servlet.ServletException;
import javax.servlet.annotation.MultipartConfig;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

import org.springframework.beans.factory.annotation.Value;
import org.springframework.core.io.Resource;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.multipart.MultipartFile;

import lombok.extern.slf4j.Slf4j;

@Slf4j
@Controller
public class FileUploadControllerServlet {
	
	@Value("/resources/images")
	private String imagesUrl;
	
	@Value("/resources/images")
	private Resource imagesFolder;
	
	private File imageFolder;
	
	@PostConstruct
	public void init() throws IOException {
		imageFolder = imagesFolder.getFile();
	}
	
	@PostMapping("/15/fileUpload.do")
	public String fileUpload(
		MultipartFile uploadFile
		, @RequestParam(value="uploader",required = true)String uploader
		, HttpServletRequest req
		) throws IOException {
		
		String filename = uploadFile.getOriginalFilename();
		File saveFile = new File(imageFolder, filename);
		uploadFile.transferTo(saveFile);
		String fileUrl = imagesUrl + "/" + saveFile.getName();
		HttpSession session = req.getSession();
		session.setAttribute("uploader", uploader);
		session.setAttribute("fileUrl", fileUrl);

		String viewName = "redirect:/15/fileUploadForm.jsp";
		return viewName;
	}
}






















